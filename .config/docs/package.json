{
  "private": "false",
  "name": "@mblabs/docs-npm",
  "version": "0.0.1",
  "description": "Documentation partials used to generate documentation for NPM, Node, and NestJS projects",
  "license": "MIT",
  "author": "Brian Zalewski <brian@megabyte.space> (https://megabyte.space)",
  "homepage": "https://megabyte.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProfessorManhattan/docs-npm.git"
  },
  "bugs": {
    "email": "help@megabyte.space",
    "url": "https://gitlab.com/megabyte-labs/documentation/npm/-/issues"
  },
  "type": "module",
  "scripts": {
    "help": "task --list",
    "prepare": "task common:husky",
    "start": "bash .config/start.sh"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@mblabs/eslint-config": "^1.0.0",
    "@mblabs/prettier-config": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "handlebars-helpers": "^0.10.0"
  },
  "keywords": [
    "common",
    "docs",
    "documentation",
    "megabytelabs",
    "nestjs",
    "node",
    "npm",
    "package",
    "partials",
    "professormanhattan",
    "shared"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "blueprint": {
    "description": "Documentation partials used to generate documentation for NPM, Node, and NestJS projects",
    "docs": {
      "link": "https://megabyte.space/docs/documentation/npm"
    },
    "group": "documentation",
    "name": "NPM Documentation",
    "overview": "This repository contains documentation partials used to generate documentation for NPM, Node, and [NestJS](https://nestjs.com/) projects. It uses the partials in conjunction with customizable variables to generate unique documentation that follows the same format for many types of NPM/Node/NestJS projects. When this project is updated, the changes are propagated to the [NPM common files repository](https://gitlab.com/megabyte-labs/common/npm). From there, common files and documentation are propagated to individual NPM projects. By doing this, we are able to keep documentation, configurations, and common files up-to-date from a central location.",
    "repository": {
      "github": "https://github.com/ProfessorManhattan/docs-npm",
      "gitlab": "https://gitlab.com/megabyte-labs/documentation/npm"
    },
    "slug": "docs-npm",
    "subgroup": "npm",
    "title": "NPM/Node/NestJS Project Documentation Partials"
  },
  "eslintConfig": {
    "extends": "@mblabs/eslint-config"
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "**/*.(js|jsx|ts|tsx)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.sh": [
      "task fix:shell --",
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ]
  },
  "prettier": "@mblabs/prettier-config",
  "standard-version": {
    "scripts": {
      "prerelease": "git add --all"
    }
  }
}
